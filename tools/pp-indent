# Settings.

pre_indent = ''
post_indent = ' '
rules = {
    'if': (0, 1),
    'ifdef': (0, 1),
    'ifndef': (0, 1),
    'else': (-1, 1),
    'elif': (-1, 1),
    'endif': (-1, 0),
    'define_h': (-1, 1),
}

import sys

depth = 0
for line in sys.stdin:
    sline = line.lstrip()
    if not sline.startswith('#'):
        sys.stdout.write(line)
        continue
    line = sline[1:].lstrip()
    if not line:
        sys.stdout.write('\n')
        continue
    word = line.split(None, 1)[0]
    if word == 'define' and line.endswith('_HPP\n'):
        word = 'define_h'
    pre, post = rules.get(word, (0, 0))
    depth += pre
    sys.stdout.writelines([depth * pre_indent, '#', depth * post_indent, line])
    depth += post
